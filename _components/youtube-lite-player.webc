<script webc:setup>
function getPosterImage(slug) {
	let videoUrl = `https://youtube.com/watch?v=${slug}`;
	return `https://v1.opengraph.11ty.dev/${encodeURIComponent(videoUrl)}/`;
}
function getLinkUrl(slug, start) {
	return `https://youtube.com/watch?v=${slug}${start ? `&t=${start}s` : ''}`;
}
</script>
<style>
.lite-youtube-link {
	--ellipsis-lines: 2;
	margin-top: 0.5em; /* 8px /16 */
	background: url(https://v1.indieweb-avatar.11ty.dev/https%3A%2F%2Fyoutube.com/) no-repeat;
	background-size: 1em auto;
	background-position: 0 .35em;
	padding-left: 1.25em;
}
is-land[ready] lite-youtube {
	--yt-poster-img-url: var(--yt-poster-img-url-lazy);
}
</style>
<script type="module" src="/static/browser-window.js" webc:keep></script>
<browser-window mode="dark" flush icon :url="getLinkUrl(slug, start)" shadow>
	<is-land on:visible class="fluid-width-video-wrapper">
		<lite-youtube :videoid="slug" :params="start ? `start=${start}` : false" :playlabel="`Play${label ? `: ${label}` : ''}`" :style="`background-image: var(--yt-poster-img-url); --yt-poster-img-url-lazy: url('${poster || getPosterImage(slug)}');`"></lite-youtube>
		<template data-island="once" webc:raw>
			<style>
			lite-youtube {
				max-width: 100% !important;
				background-size: cover;
			}
			/* Plugin bug: clicking the red youtube play icon in the center would navigate to youtube.com */
			lite-youtube:defined .lty-playbtn {
				pointer-events: none;
			}
			</style>
			<link rel="stylesheet" href="/static/lite-yt-embed.css">
			<script type="module" src="/static/lite-yt-embed.js"></script>
		</template>
	</is-land>
</browser-window>
<a :href="getLinkUrl(slug, start)" class="lite-youtube-link text-ellipsis-multi">Watch on YouTube<span webc:if="label" webc:nokeep>: <em webc:if="label" @text="label"></em></span></a>