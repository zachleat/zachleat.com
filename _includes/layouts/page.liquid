---
layout: layouts/default.liquid
tmpl: page
disableComments: true
---
<article class="h-entry">
	<h1 class="p-name primary-title{% if removeTitle %} sr-only{% endif %}{% if smalltitle %} primary-title-smalltitle{% endif %}{% if primaryTitleExemptWidth %} primary-title-exempt{% endif %}">{{ title }}</h1>
	<div class="content-grid e-content">
		{{ content }}
	</div>
</article>

{% if showAbout %}
<article class="content-grid-sibling">
	{% include "about.html" %}
</article>
{% endif %}
{% unless disableComments %}
	{%- capture absoluteUrl -%}{{ page.url | absoluteUrl }}{%- endcapture -%}
	{% include "webmentionlist", absoluteUrl: absoluteUrl %}
{% endunless %}