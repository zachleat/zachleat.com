<a href="#skiplink-content" id="skiplink-top" class="skiplink skiplink-fn">Skip to Content</a>
<div class="rail">
	<header>
		<a href="/" class="header">
			{% image site.avatarImgAttrs %}
			<h1>Zach Leatherman</h1>
		</a>
	</header>
	<aside class="rail-sticky">
		<nav role="navigation">
			<div class="navigation">
				<div class="tags tags-rail">
					<span class="tags-bigger">
						<a href="/" class="tag tag-borderless{% if page.url == '/' %} active{% endif %}">Home</a>
						<a href="/web/about/" class="tag tag-borderless{% if page.url == '/web/about/' %} active{% endif %}">About</a>
						<a href="/web/" class="tag tag-borderless{% if page.url == '/web/' %} active{% endif %}">Archives</a>
					</span>
					<a href="/web/fonts/" class="hide-md tag font-loading{% if page.url == '/web/fonts/' %} active{% endif %}">Web Fonts</a>
					<a href="/web/eleventy/" class="hide-md tag{% if page.url == '/web/eleventy/' %} active{% endif %}">Eleventy</a>
				</div>
				{% include social.html %}
				<div class="tags tags-rail hide-md">
					<a href="/web/speaking/" class="tag{% if page.url == '/web/speaking/' %} active{% endif %}">Speaking</a>
